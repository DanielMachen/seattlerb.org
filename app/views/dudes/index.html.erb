<div class="row">
  <h1 class="span10">Admin :: People</h1>
  <div class="span2 new"><%= link_to "New Dudette", new_dude_path, class: 'btn' %></div>
</div>

<table class='table table-striped'>
  <% @dudes.each do |dude| %>
    <tr>
      <td><h3><%= dude.name %></h3></td>
      <td class='span1'><%= link_to "Edit", edit_dude_path(dude.id), class: 'btn' %></td>
      <td class='span1'><%= button_to "Delete", dude, method: :delete, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
</table>

