<% @projects.each do |project| %>
  <div class='row project'>
    <%= image_tag 'ruby-placeholder.png', class: "span2" %>
    <div class='span10'>
      <h2><%= link_to project.name, project.url %></h2>
      <%= project.description %>
      <h3>Authors</h3>
      <ul class='links'>
        <% project.dudes.each do |dude| %>
          <li><%= link_to dude.name, "/people##{dude.name.parameterize}" %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>