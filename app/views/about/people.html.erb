<% @people.each do |person| %>
  <div class='featured profile row'>
    <div class='span1'>
      <%= image_tag(person.image_url || "missing_image.png") %>
    </div>
    <div class="span10 description">
      <h1 id="<%= person.name.parameterize %>"><%= person.name %></h1>
      <p class='bio'><%= person.bio %></p>
      <ul class='links'>
        <% if person.website? %><li><i class='icon-user '></i><a href=<%= person.website %>>Website</a></li><% end %>
        <% if person.ruby_gems_id? %><li><i class='icon-user '></i><a href="http://rubygems.org/profiles/<%= person.ruby_gems_id %>">Ruby Gems</a></li><% end %>
        <% if person.email? %><li><i class='icon-envelope '></i><a href="mailto:<%= person.email %>">Email</a></li><% end %>
        <% if person.github? %><li><i class='icon-user '></i><a href=<%= person.github %>>Github</a></li><% end %>
        
        <%= raw twitter_link person.twitter %>
      </ul>
    </div>
  </div>
<% end %>
